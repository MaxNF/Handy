<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.netfantazii.handy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".HandyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4546128231433208~4467489086"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="ru.netfantazii.handy.core.main.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".core.notifications.NotificationBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ru.netfantazii.handy.ALARM_GOES_OFF" />
                <action android:name="ru.netfantazii.handy.GEOFENCE_IS_CROSSED" />
                <action android:name="ru.netfantazii.handy.CANCEL_NOTIFICATION" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
<!--                Отслеживает очищение данных у Google services (после этого геометки в приложениях слетают)-->
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />
                <data
                    android:scheme="package"
                    android:sspPrefix="com.google.android.gms" />
            </intent-filter>
        </receiver>

        <service android:name=".core.notifications.NotificationService" />
        <service
            android:name=".core.share.CatalogMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".core.share.CatalogDownloadJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>
</manifest>