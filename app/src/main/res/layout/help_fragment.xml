<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:divider="@drawable/linear_layout_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="@+id/help_main_hint"
        app:layout_constraintStart_toStartOf="@+id/help_main_hint"
        app:layout_constraintTop_toBottomOf="@+id/help_main_hint">

        <ImageView
            android:id="@+id/help_selection_icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_page_selection_icon" />

        <ImageView
            android:id="@+id/help_selection_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_page_selection_icon" />

        <ImageView
            android:id="@+id/help_selection_icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_page_selection_icon" />

        <ImageView
            android:id="@+id/help_selection_icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_page_selection_icon" />

        <ImageView
            android:id="@+id/help_selection_icon_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_page_selection_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/help_main_hint"
        android:textColor="@color/textColorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:text="@string/help_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>