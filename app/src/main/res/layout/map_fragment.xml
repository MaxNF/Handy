<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.netfantazii.handy.core.notifications.MapViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/radius_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radius_label"
            android:textColor="@color/textColorBlack"
            app:layout_constraintBottom_toTopOf="@+id/seekbar_frame"
            app:layout_constraintEnd_toEndOf="@+id/seekbar_frame"
            app:layout_constraintStart_toStartOf="@+id/seekbar_frame" />

        <LinearLayout
            android:id="@+id/seekbar_value_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/fab_my_location"
            app:layout_constraintEnd_toEndOf="@+id/fab_my_location"
            app:layout_constraintStart_toStartOf="@+id/fab_my_location">

            <TextView
                android:id="@+id/seekbar_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.seekBarDisplayValue}"
                android:textColor="@color/textColorBlack"
                tools:text="100" />

            <TextView
                android:id="@+id/seekbar_m_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekbar_m_label"
                android:textColor="@color/textColorBlack" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_my_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:onClick="@{() -> viewModel.onFindMyLocationClick()}"
            app:backgroundTint="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/mapview"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_my_location"
            app:tint="?attr/fabIconTintColor" />

        <FrameLayout
            android:id="@+id/seekbar_frame"
            android:layout_width="40dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/seekbar_value_group"
            app:layout_constraintEnd_toEndOf="@+id/fab_my_location"
            app:layout_constraintStart_toStartOf="@+id/fab_my_location">

            <SeekBar
                android:id="@+id/geofence_seekbar"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:max="900"
                android:progress="@={viewModel.seekBarValue}"
                android:rotation="270" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/search_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mapview">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:boxBackgroundColor="@android:color/white"
                app:boxBackgroundMode="none"
                app:endIconDrawable="@drawable/ic_edit_text_cross"
                app:endIconMode="clear_text"
                app:errorIconDrawable="@null"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_text_field"
                    style="@style/MapSearchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:imeOptions="flagNoExtractUi|actionSearch"
                    android:inputType="textCapSentences"
                    android:paddingTop="10dp"
                    android:text="@={viewModel.searchValue}" />
            </com.google.android.material.textfield.TextInputLayout>

            <ListView
                android:id="@+id/suggest_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:visibility="invisible"
                android:divider="@android:color/transparent"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>