<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="ru.netfantazii.handy.NetworkViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/user_info_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/user_pic"
            app:layout_constraintTop_toTopOf="@+id/user_pic"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@{viewModel.user == null ? @string/app_name : viewModel.user.name}"
                android:textColor="@color/appLogoBackgroundColor"
                android:textSize="20sp"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:text="@{viewModel.user == null ? @string/app_subtitle : viewModel.user.email}"
                android:textColor="@color/appLogoBackgroundColor"
                android:textSize="14sp"
                tools:text="@string/app_subtitle" />

        </LinearLayout>

        <TextView
            android:id="@+id/revoke_access_hing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/revoke_access_hint"
            android:textColor="@color/blackSemiTransparent60"
            android:textSize="12sp"
            android:visibility="@{viewModel.user == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button" />

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="@{() -> viewModel.onGoogleButtonClick()}"
            android:text='@{viewModel.user == null ? "Sign in" : "Sign out" }'
            app:layout_constraintBottom_toBottomOf="@+id/secret_code_container"
            app:layout_constraintStart_toStartOf="@+id/user_info_group"
            app:layout_constraintTop_toTopOf="@+id/secret_code_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>