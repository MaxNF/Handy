<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/catalog_label"
            style="@style/HeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/listTextColor"
            app:layout_constraintEnd_toStartOf="@+id/button_delete_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Catalog's name" />

        <ImageButton
            android:id="@+id/button_buy_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="14dp"
            android:src="@drawable/ic_buy_all_icon"
            app:layout_constraintBottom_toBottomOf="@+id/catalog_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/catalog_label" />

        <ImageButton
            android:id="@+id/button_cancel_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="14dp"
            android:src="@drawable/ic_cancel_all_icon"
            app:layout_constraintBottom_toBottomOf="@+id/catalog_label"
            app:layout_constraintEnd_toStartOf="@+id/button_buy_all"
            app:layout_constraintTop_toTopOf="@+id/catalog_label" />

        <ImageButton
            android:id="@+id/button_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="14dp"
            android:src="@drawable/ic_delete_all_icon"
            app:layout_constraintBottom_toBottomOf="@+id/catalog_label"
            app:layout_constraintEnd_toStartOf="@+id/button_cancel_all"
            app:layout_constraintTop_toTopOf="@+id/catalog_label" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catalog_label">


            <LinearLayout
                android:id="@+id/hint_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nothing_to_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hint_nothing_to_show"
                    android:textColor="@color/textColorGray" />

                <TextView
                    android:id="@+id/nothing_to_show2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hint_nothing_to_show_recipe"
                    android:textColor="@color/textColorGray" />
            </LinearLayout>

            <com.leinardi.android.speeddial.SpeedDialOverlayLayout
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <com.leinardi.android.speeddial.SpeedDialView
                android:id="@+id/speedDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:sdMainFabClosedSrc="@drawable/ic_plus_sign"
                app:sdOverlayLayout="@id/overlay"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                style="@style/RecyclerViewMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:layout_anchor="@+id/hint_group" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>