<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="contact"
            type="ru.netfantazii.handy.model.Contact" />

        <variable
            name="handler"
            type="ru.netfantazii.handy.core.contacts.ContactsClickHandler" />
    </data>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0D9F0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            style="@style/TextCatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textColor="?attr/listTextColor"
            android:text="@{contact.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name test" />

        <ImageButton
            android:id="@+id/contact_edit_button"
            style="@style/RvElementIconStyle"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            android:onClick="@{() -> handler.onContactEditClick(contact)}"
            app:layout_constraintBottom_toBottomOf="@+id/contact_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contact_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>