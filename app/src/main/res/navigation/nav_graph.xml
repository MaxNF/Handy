<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/catalogs_fragment">

    <fragment
        android:id="@+id/catalogs_fragment"
        android:name="ru.netfantazii.handy.core.catalogs.CatalogsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/catalogs_fragment">
        <action
            android:id="@+id/action_catalogs_fragment_to_products_fragment"
            app:destination="@id/products_fragment" />
    </fragment>
    <fragment
        android:id="@+id/products_fragment"
        android:name="ru.netfantazii.handy.core.groupsandproducts.GroupsAndProductsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/products_fragment">
        <argument
            android:name="catalogName"
            app:argType="string" />
        <argument
            android:name="catalogId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/appSettings"
        android:name="ru.netfantazii.handy.core.preferences.AppSettings"
        android:label="@string/settings_fragment_label" />
    <action
        android:id="@+id/action_global_appSettings"
        app:destination="@id/appSettings"/>
    <fragment
        android:id="@+id/helpFragment"
        android:name="ru.netfantazii.handy.core.help.HelpFragment"
        android:label="@string/help_fragment_label" />
    <action
        android:id="@+id/action_global_helpFragment"
        app:destination="@id/helpFragment"/>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="ru.netfantazii.handy.core.welcome.WelcomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/welcome_fragment" />
    <action
        android:id="@+id/action_global_welcomeFragment"
        app:destination="@+id/welcomeFragment"
        app:popUpTo="@+id/catalogs_fragment" />
</navigation>