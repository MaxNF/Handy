<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Header above RecyclerView-->
    <style name="HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!--List element labels-->
    <style name="ListText"></style>

    <style name="TextCatalog" parent="ListText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBuy" parent="ListText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextIngredient" parent="ListText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextRecipe" parent="ListText">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Counters and other non primary text-->
    <style name="SecondaryText" parent="ListText">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Small hint under recipe label-->
    <style name="SecondaryTextSmall" parent="ListText">
        <item name="android:textSize">12sp</item>
    </style>
    <!--EditImage style-->
    <style name="EditImage">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_edit</item>
        <!--используем паддинг, чтобы увеличить размер кнопки по краям-->
        <item name="android:padding">15dp</item>
    </style>

    <!--Universal RecyclerView style-->
    <style name="RecyclerViewMain">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--Overlay styles-->
    <style name="OverlayEditText">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textColorHint">@color/textColorGray</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">80</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:hint">@string/hint_overlay_text_field</item>
    </style>

    <style name="CrossNextToEditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="toolbarLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/toolbarElementColorWhite</item>
    </style>
    <style name="toolbarDark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/toolbarElementColorBlack</item>
    </style>

    <style name="helpImageViews">
        <item name="android:background">@drawable/image_view_border</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="helpTextViews">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
