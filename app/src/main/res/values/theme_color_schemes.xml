<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Corelation with material color tool colors:
            <item name="colorPrimary"> = colorPrimary
            <item name="colorPrimaryDark"> = colorPrimaryDark
            <item name="colorAccent"> = colorSecondary
            <item name="swipeBackgroundColor"> = colorPrimaryLight
            <item name="snackbarActionColor"> = colorSecondaryLight   -->

    <!--Base theme (unchangeable)-->
    <style name="Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="mainBackground">@color/mainBackgroundWhite</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <!--List elements-->
        <item name="catalogNormalColor">@color/catalogColor</item>
        <item name="catalogSwipeColor">@color/catalogSwipeColor</item>
        <item name="boughtNormalColor">@color/boughtColor</item>
        <item name="boughtSwipeColor">@color/boughtSwipeColor</item>
        <item name="notBoughtNormalColor">@color/notBoughtColor</item>
        <item name="notBoughtSwipeColor">@color/notBoughtSwipeColor</item>
        <item name="listIconsColor">@color/blackSemiTransparent80</item>
        <item name="listTextColor">@color/blackSemiTransparent80</item>
        <!--Other colors-->
        <item name="overlayBackgroundColor">@color/overlayColor</item>
        <item name="speedDialActionLabelBackground">@color/speedDialActionBackground</item>
        <item name="speedDialActionLabelColor">@color/speedDialActionColor</item>
        <item name="buyAllButtonColor">@color/buyAllButtonColor</item>
        <item name="cancelAllButtonColor">@color/cancelAllButtonColor</item>
        <item name="deleteAllButtonColor">@color/deleteAllButtonColor</item>
        <item name="fabIconTintColor">?attr/fabIconTintColor</item>
    </style>

    <style name="BaseBlackTitles" parent="Base">
        <item name="toolbarElementColor">@color/toolbarElementColorBlack</item>
        <item name="toolbarBackArrowColor">@style/toolbarDark</item>
        <item name="fabIconTintColor">@color/fabIconTintColorBlack</item>
    </style>

    <style name="BaseWhiteTitles" parent="Base">
        <item name="toolbarElementColor">@color/toolbarElementColorWhite</item>
        <item name="toolbarBackArrowColor">@style/toolbarLight</item>
        <item name="fabIconTintColor">@color/fabIconTintColorWhite</item>
    </style>

    <!--Main theme (Purple)-->
    <style name="Purple" parent="BaseWhiteTitles">
        <item name="colorPrimary">#9c27b0</item>
        <item name="colorPrimaryDark">#6a0080</item>
        <item name="colorAccent">#00796b</item>
        <item name="snackbarActionColor">#48a999</item>
        <item name="swipeBackgroundColor">#9c27b0</item>
