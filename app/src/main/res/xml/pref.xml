<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ListPreference
        android:layout="@layout/pref_category_view"
        android:key="@string/theme_pref_key"
        android:title="@string/theme_pref_label"
        android:entries="@array/theme_labels"
        android:entryValues="@array/theme_values"
        app:useSimpleSummaryProvider="true"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true" />


    <ListPreference
        android:layout="@layout/pref_category_view"
        android:key="@string/sorting_pref_key"
        android:title="@string/sorting_pref_label"
        android:entries="@array/sorting_labels"
        android:entryValues="@array/sorting_values"
        app:useSimpleSummaryProvider="true"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"/>

    <ru.netfantazii.handy.customviews.MyPreferenceButton
        android:key="delete_account_button"
        android:title="Delete account?"
        android:summary="Friend list will be deleted permanently"
        android:layout="@layout/pref_account_control_buttons"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"/>

</PreferenceScreen>